#plis.modal.open
  .modal__inner
    .modal__close
    = form_for @link do |f|
      - if @link.errors.any?
        #error_explanation
          %h2= "#{pluralize(@link.errors.count, "error")} prohibited this link from being saved:"
          %ul
            - @link.errors.full_messages.each do |msg|
              %li= msg

      .field
        = f.label :url
        = f.text_field :url
      .actions
        = f.submit 'Save'
  = stylesheet_link_tag( stylesheet_url 'modal')